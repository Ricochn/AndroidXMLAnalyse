<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <site.lige.sand01.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </site.lige.sand01.TitleLayout>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="静态分析"
    android:textSize="20dp"
    android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=">>APKFILE:/storage/sdcard1/app-debug.apk"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=">>UNAPKDIR:/storage/sdcard1/unzipFile/" />

    <Button
    android:id="@+id/begin_unzip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="hack the Apk"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/XML_Printer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="XML  Printer"/>
        <Button
            android:id="@+id/read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="READ FILE"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态监测"
        android:textSize="20dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NO CONTENT"
        android:textSize="20dp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tips:\n
1.click 'UNZIP THE APK' to deapk a android package file';\n
2.click 'XMLPRINTER' to decompile the XML file;\n
3.click 'READ' to show the decompiled content here."
                android:textColor="#00ff00"/>
        </ScrollView>

    </LinearLayout>


</LinearLayout>
